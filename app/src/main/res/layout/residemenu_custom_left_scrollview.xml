<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        android:id="@+id/profileDetailsContainer"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/sidemenu_image_width"
        android:layout_height="@dimen/sidemenu_image_width"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/profile"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:finalHeight="@dimen/image_final_width"
        app:finalYPosition="2dp"
        app:layout_behavior="com.oozmakappa.oyeloans.AvatarImageBehavior"
        app:startHeight="2dp"
        app:startToolbarPosition="2dp"
        app:startXPosition="2dp"
        android:id="@+id/userProfilePictureSideMenu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/welcome_user_sidemenu"
        android:textAlignment="center"
        android:textColor="@color/WhiteColor"
        android:textStyle="bold"
        android:text="Welcome User!"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/placeholder"
        android:id="@+id/location_image"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_location_side_menu"
        android:textAlignment="center"
        android:textColor="@color/WhiteColor"
        android:textStyle="bold"
        android:text="Chennai"
        android:layout_marginTop="2dp"
        android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/sv_left_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:scrollbars="none"
        android:layout_below="@id/profileDetailsContainer"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/layout_left_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</RelativeLayout>